<?xml version="1.0" encoding="utf-8"?>
<product productid="sles" schemaversion="0.9.9">
  <!-- ID can be used for build commands, HTML IDs, etc. -->
  <!-- active="yes"/"no" configures whether  -->
  <!-- lifecycle="unpublished"/"beta"/"supported"/"unsupported":
    + "unpublished": Don't build, don't mention on overview page
    + "beta": Build (draft and beta warning by default), don't mention on
      overview page
    + "supported": Build, publish normally
    + "unsupported": build, publish with note "not supported anymore,
      please upgrade"
  -->

  <name>SUSE Linux Enterprise Server</name>
  <shortname>SLES</shortname>
  <maintainers>
    <contact>sknorr@suse.de</contact>
    <contact>sseebergelverfeldt@suse.com</contact>
  </maintainers>

  <desc default="1" lang="en-us">
    <!-- This is restricted HTML:
    p, div, h*, ul/li, ol/li, pre, em, strong, span, sup, sub, code, a, s,
    q, cite + class/id attributes -->
    <p>
      This product will lose control of you and help you live free.
      SLES is so glad to have you and your evil curls.
    </p>
  </desc>

  <desc default="0" lang="fr-fr">
    <p>
      Ce produit ne peut pas obtenir la contrôle de vous, mais le vous aidez
      a vivir libre. SLES est très heureux de vous avoir et d'avoir vos
      cheveux chevalier.
    </p>
  </desc>

  <desc lang="de-de">
    <p>
      Dieses Produkt hat die Kontrolle über Sie bereits verloren und will
      Ihnen helfen, lieber libre zu leben. SLES ist verzückt, dass Sie ihm
      und seinen bösartigen Lockrufen gefolgt sind.
    </p>
  </desc>

  <docset setid="15ga" lifecycle="supported">
    <version>15</version>

    <builddocs>

      <git>
        <remote>https://github.com/SUSE/doc-sle</remote>
      </git>

      <language default="1" lang="en-us">
        <branch>develop</branch>
        <subdir>.</subdir>

        <!-- MAXIMALIST (<styleroot>/<param>) COMPILATION (i.e. w/ <subdeliverables/>) DELIVERABLE EXAMPLE -->
        <deliverable remarks="0" draft="false" meta="0">
          <dc>DC-SLES-all</dc>
          <format html="1" single-html="0" pdf="0" epub="0"/>
          <styleroot>/.../.../...</styleroot>
            <!-- Styleroot is totally optional. -->
          <param name="foo.bar">1</param>
            <!-- Automatically forwarded to DAPS as "-stringparam"s. -->
          <subdeliverable>book.admin</subdeliverable>
          <subdeliverable>book.gnomeuser</subdeliverable>
            <!-- Subdeliverables contain the IDs of books we link to from the
            overview page; if there are no subdeliverables, we instead link
            to "index.html" -->
            <!-- We assume that we can find the names of books out via a
            script. Configuring them here becomes much less feasible as soon
            as you have multiple languages. -->
        </deliverable>

        <!-- MINIMALIST INDIVIDUAL DELIVERABLE EXAMPLES -->
        <deliverable>
          <dc>DC-SLES-admin</dc>
          <format single-html="1" pdf="true" epub="1"/>
        </deliverable>
        <deliverable>
          <!-- Minimalist individual deliverable -->
          <dc>DC-SLES-gnomeuser</dc>
          <format single-html="1" pdf="1" epub="1"/>
        </deliverable>

      </language>

      <!-- For translations, we assume the same deliverables as for the
      original language, exceptions are noted within the <untranslated>
      element. However, we probably still need to build these untranslated deliverables. -->
      <language lang="de-de">
        <branch>maint/sle15</branch>
        <subdir>sles/de</subdir>
        <untranslated>
          <deliverable>
            <dc>DC-SLES-all</dc>
            <subdeliverable>book.gnomeuser</subdeliverable>
          </deliverable>
          <deliverable>
            <dc>DC-SLES-gnomeuser</dc>
          </deliverable>
        </untranslated>
      </language>

      <language lang="fr-fr">
        <branch>maint/sle15</branch>
        <subdir>sles/fr</subdir>
      </language>

    </builddocs>

    <extralinks>
      <link href="https://.../...">Release Notes</link>
      <link href="https://.../...">SUSE Best Practices</link>
      <link href="https://.../...">SUSE Evil Curls 2018 Documentation</link>
    </extralinks>

  </docset>

  <docset setid="11sp4" lifecycle="unsupported">
    <version>11 SP4</version>

    <builddocs>


      <git>
        <remote>https://svn.opensuse.org/viewvc/opensuse-doc/trunk/documents/sle/</remote>
      </git>

      <language default="1" lang="en-us">
        <branch>master</branch>
        <subdir>en/attic</subdir>

        <!-- MAXIMALIST (<styleroot>/<param>) COMPILATION (i.e. w/ <subdeliverables/>) DELIVERABLE EXAMPLE -->
        <deliverable remarks="1" draft="0" meta="0">
          <dc>DC-SLES-all</dc>
          <format html="1"/>
          <styleroot>/.../.../...</styleroot>
          <param name="foo.bar">1</param>
          <subdeliverable>book.admin</subdeliverable>
          <subdeliverable>book.gnomeuser</subdeliverable>
        </deliverable>

        <!-- MINIMALIST INDIVIDUAL DELIVERABLE EXAMPLES -->
        <deliverable>
          <dc>DC-SLES-admin</dc>
          <format single-html="1" pdf="1" epub="1"/>
        </deliverable>
        <deliverable>
          <!-- Minimalist individual deliverable -->
          <dc>DC-SLES-gnomeuser</dc>
          <format single-html="1" pdf="1" epub="1"/>
        </deliverable>

      </language>

      <language default="0" lang="de-de">
        <branch>master</branch>
        <subdir>trans/attic/sles/de</subdir>
        <untranslated>
          <deliverable>
            <dc>DC-SLES-all</dc>
            <subdeliverable>book.gnomeuser</subdeliverable>
          </deliverable>
          <deliverable>
            <dc>DC-SLES-gnomeuser</dc>
          </deliverable>
        </untranslated>
      </language>

      <language lang="fr-fr">
        <branch>master</branch>
        <subdir>trans/attic/sles/de</subdir>
      </language>

    </builddocs>

    <extralinks>
      <link href="https://.../...">Release Notes</link>
      <link href="https://.../...">SUSE Best Practices</link>
    </extralinks>

  </docset>


</product>
